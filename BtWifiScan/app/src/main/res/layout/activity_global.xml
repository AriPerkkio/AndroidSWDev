<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ariperkkio.btwifiscan.GlobalActivity"
    android:background="@color/material_blue_grey_950">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get all"
        android:id="@+id/globalBtnGetAll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_dark"
        android:textColor="@color/mainColorCyan" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/globalListResults"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/globalBtnGetAll"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/globalBtnMap"
        android:background="@android:color/background_dark"
        android:textColor="@color/mainColorCyan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Servers: "
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/mainColorCyan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Databases: "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="@color/mainColorCyan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Primary OFF"
        android:id="@+id/globalServOne"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:textColor="@color/OFFLINE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Secondary OFF"
        android:id="@+id/globalServTwo"
        android:textColor="@color/OFFLINE"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/globalDbTwo"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1st OFF"
        android:id="@+id/globalDbOne"
        android:layout_below="@+id/globalServOne"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:textColor="@color/OFFLINE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2nd OFF"
        android:id="@+id/globalDbTwo"
        android:layout_marginLeft="5dp"
        android:textColor="@color/OFFLINE"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3rd OFF"
        android:id="@+id/globalDbThree"
        android:layout_marginLeft="5dp"
        android:textColor="@color/OFFLINE"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/textView5"
        android:textColor="@color/mainColorCyan"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/globalServOne"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/textView6"
        android:textColor="@color/mainColorCyan"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/globalDbOne"
        android:layout_alignEnd="@+id/globalServOne" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/textView7"
        android:textColor="@color/mainColorCyan"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/globalDbTwo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Global DB results: "
        android:id="@+id/textView8"
        android:textColor="@color/mainColorCyan"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bluetooth: "
        android:id="@+id/textView9"
        android:textColor="@color/mainColorCyan"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/globalListResults"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/globalBtCount"
        android:textColor="@color/OFFLINE"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/globalWifiCount"
        android:textColor="@color/OFFLINE"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wifi:"
        android:id="@+id/textView10"
        android:textColor="@color/mainColorCyan"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/globalDbThree"
        android:layout_toEndOf="@+id/globalBtCount" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local\nSave"
        android:id="@+id/globalBtnSave"
        android:background="@android:color/background_dark"
        android:textColor="@color/mainColorCyan"
        android:layout_below="@+id/globalListResults"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
